package mycodes;

import java.util.*;
import java.util.SortedSet;
import java.util.TreeSet;

public class CDStepsPrimes {
	
	public static long[] step(int g, long m, long n) {
		SortedSet<Long> tab = new TreeSet<>();
		long [] t = new long [2] ; 
       for (long i = m; i<=n;i++)
       {
    	  
    	   int count = 0; 
    	   for (long j = 1; j<=i;j++)
    	   {
    		   if (i%j == 0) count ++ ; 
    		   
    	   }
    	   if (count == 2 ) tab.add(i);
    	   
    	   
       }
       
       
      Object[] arr = tab.toArray();
     
       for (int i =0; i<tab.size()-1;i++)
       {
    	   for (int j = 1; j<i;j++) {
    	   if ((long)arr[j] - (long)arr[i] == g ) { t[0] = (long)arr[i]; t[1] = (long)arr[j]; break;}
       }
       }
       
       return t;
    }

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(Arrays.toString(step(10,300,400)));
	}

}
