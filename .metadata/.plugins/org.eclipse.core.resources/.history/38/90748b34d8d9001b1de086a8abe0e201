package mycodes;

import java.util.Arrays;
import java.util.stream.Collectors;


public class CDCamelCase {

	static String toCamelCase(String s){
		
		String [] str = s.split("[-_]");
		char [] ch = new char [str.length];
		for (int i=0;i<str.length;i++)
			
		{
			
			
			ch[i] = Character.toUpperCase(str[i].charAt(0));
			System.out.println(ch[i]);
			str[i] += str[i].replace(str[i].charAt(0), ch[i]);
			System.out.println(str[i]);
			
		}
		return Arrays.stream(str).filter(e -> !"".equals(e)).collect(Collectors.joining(""));
		
	}
	public static void main(String[] args) {
		
		System.out.println(toCamelCase("the_stealth-warrior"));
	

	}

}
